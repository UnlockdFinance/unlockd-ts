{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build",
    "emitDeclarationOnly": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
